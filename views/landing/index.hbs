{{#extends 'base'}}

{{#block 'content'}}
  <h1>Welcome to the Poster Shop</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Cost</th>
        <th>Description</th>
        <th>Date</th>
        <th>Stock</th>
        <th>Height</th>
        <th>Width</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each posters}}
        <tr>
          <td>{{this.title}}</td>
          <td>${{divide this.cost 100}}</td>
          <td>{{this.description}}</td>
          <td>{{this.date}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.height}}</td>
          <td>{{this.width}}</td>
          <td></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/block}}

{{/extends}}